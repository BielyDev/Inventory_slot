script/source = "extends VBoxContainer

@onready var inventory_system: Control = $\"..\"

var items_path: Array = [
	\"res://addons/Inventory/Scenes/Item/Sword.tscn\",
	\"res://addons/Inventory/Scenes/Item/Kanoa.tscn\",
	\"res://addons/Inventory/Scenes/Item/Potion_life.tscn\",
	\"res://addons/Inventory/Scenes/Item/Potion_mana.tscn\"
]

func _on_reset_pressed() -> void:
	get_tree().reload_current_scene()



func _process(delta: float) -> void:
	$List.text = str(inventory_system.inventory.panel_item.inventory.items)


func _on_add_item_pressed() -> void:
	if get_child_count() >= 4:
		get_child(3).queue_free()
		return
	
	var new_panel: PanelContainer = PanelContainer.new()
	var new_grid: GridContainer = GridContainer.new()
	
	new_grid.columns = 2
	add_child(new_panel)
	new_panel.add_child(new_grid)
	
	for i in items_path:
		var new_button = Button.new()
		new_button.custom_minimum_size = Vector2(64,64)
		
		new_grid.add_child(new_button)
		
		new_button.pressed.connect(item_selected)

func item_selected() -> void:
	print(\"a\")
"

